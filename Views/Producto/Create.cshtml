@model tl2_tp8_2025_camip1.ViewModels.ProductoViewModel

@{
    ViewData["Title"] = "Crear Producto";
}
<h1>@ViewData["Title"]</h1>

<section class="d-flex justify-content-center align-items-center" style="height: 70vh;">
    <article class="border rounded p-5">
        <form asp-controller="Producto" asp-action="Create" method="post">
            
            <section class="form-group p-2">
                <label asp-for="Descripcion" class="form-label"></label>
                <input type="text" asp-for="Descripcion" class="form-control-sm">
                <span asp-validation-for="Descripcion" class="text-danger"></span>          
            </section>
            
            <section class="form-group d-flex justify-content-between p-2">
                <label asp-for="Precio" class="form-label"></label>
                <input asp-for="Precio" class="form-control-sm">
                <span asp-validation-for="Precio" class="text-danger"></span>
            </section>

            <section class="form-group p-2">
                <input type="submit" value="Crear" class="btn btn-primary">
                <a class="btn btn-danger " asp-controller="Producto" asp-action="Index">Volver</a>
            </section>
        </form>
    </article>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
   <script>
        // Le dice a jQuery Validation que ignore la regla 'number'
        // que es la que produce el error de la coma.
        jQuery.validator.setDefaults({
            rules: {
                number: {
                    required: false // Deshabilita el chequeo de tipo 'number' en el Front-End
                }
            }
        });
    </script>
}