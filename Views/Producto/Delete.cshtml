@model Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h1 class="text-center my-4 text-danger">@ViewData["Title"]</h1>

<section class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <article class="border rounded p-5 shadow-sm bg-light text-center" style="width: 400px;">
        <form asp-controller="Producto" asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="IdProducto" />
            
            <p class="fs-5 mb-4">
                ¿Estás seguro de que deseas eliminar el producto 
                <strong>@Model.Descripcion</strong>?
            </p>

            <section class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger px-4">Eliminar</button>
                <a asp-controller="Producto" asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
            </section>
        </form>
    </article>
</section>