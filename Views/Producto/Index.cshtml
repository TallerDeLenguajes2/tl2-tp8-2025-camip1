@model IEnumerable<tl2_tp8_2025_camip1.Models.Producto>

@{
    ViewData["Title"] = "Productos Section";
}
<h1>@ViewData["Title"]</h1>


<h2>Listado de productos</h2>

<p>
    <a asp-action="Create" class = "btn btn-primary">Crear nuevo producto</a>
</p>

<table class="table">
    <thead>
        <th>Id Producto</th>
        <th>Producto</th>
        <th>Precio</th>
        <th>Modificar</th>
        <th>Eliminar</th>
    </thead>
    <tbody>
        @foreach(Producto item in Model)
        {
            <tr>
                <td>@item.IdProducto</td>
                <td>@item.Descripcion</td>
                <td>@item.Precio</td>
                <td>
                    <a asp-controller="Producto" asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-warning">Modificar</a>
                </td>
                <td>
                    <a asp-controller="Producto" asp-action="Delete" asp-route-id="@item.IdProducto" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
