@model tl2_tp8_2025_camip1.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<h2 class="text-center">@ViewData["Title"]</h2>

@if (@Model.ErrorMessage != null)
{
    <div class="text-danger">
        @Model.ErrorMessage
    </div>
}

<div>
    <form asp-controller=Login asp-action=Login method="post">
        <div class="form-group mt-2">
            <label asp-for="Username" class="form-label">Usuario:</label><br>
            <input asp-for="Username" class="form-control-sm"><br><br>
            @* <span asp-validation-for="Username" class="text-danger"></span> *@
        </div>
        <div class="form-group mt-2">
            <label asp-for="Password" class="form-label">Contraseña:</label><br>
            <input asp-for="Password" class="form-control-sm"><br><br>
            @* <span asp-validation-for="Password" class="text-danger"></span>     *@
        </div>

        <button type="submit" class="btn btn-primary mt-3">Ingresar</button>
    </form>
</div>

